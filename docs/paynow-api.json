{
	"openapi": "3.0.1",
	"info": {
		"title": "OpenAPI definition",
		"version": "v0"
	},
	"servers": [
		{
			"url": "https:testapi.civikestpayment.com",
			"description": "Generated server url"
		}
	],
	"paths": {
		"/payment/ivr": {
			"post": {
				"tags": [
					"Payment Service"
				],
				"operationId": "ivrPayment",
				"requestBody": {
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/IvrRequest"
							}
						}
					},
					"required": true
				},
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"*/*": {
								"schema": {
									"$ref": "#/components/schemas/TpePaymentResponse"
								}
							}
						}
					}
				},
				"security": [
					{
						"bearerAuth": []
					}
				]
			}
		}
	},
	"components": {
		"schemas": {
			"IvrRequest": {
				"required": [
					"email",
					"itemKey",
					"itemSku",
					"phone",
					"transactionAmount"
				],
				"type": "object",
				"properties": {
					"itemKey": {
						"type": "string"
					},
					"transactionAmount": {
						"minimum": 1,
						"exclusiveMinimum": false,
						"type": "number"
					},
					"itemSku": {
						"type": "string"
					},
					"email": {
						"type": "string"
					},
					"phone": {
						"pattern": "^\\d{10}$",
						"type": "string"
					},
					"firstName": {
						"type": "string"
					},
					"lastName": {
						"type": "string"
					},
					"middleName": {
						"type": "string"
					},
					"company": {
						"type": "string"
					},
					"attributes": {
						"type": "array",
						"items": {
							"$ref": "#/components/schemas/AttributeValue"
						}
					}
				}
			},
			"IvrResponse": {
				"type": "object",
				"properties": {
					"orderId": {
						"type": "integer",
						"format": "int64"
					},
					"status": {
						"type": "string"
					},
					"errorMessage": {
						"type": "string"
					},
					"feeAmount": {
						"type": "number"
					},
					"totalAmount": {
						"type": "number"
					},
					"sku": {
						"type": "string"
					}
				}
			},
			"AttributeValue": {
				"type": "object",
				"properties": {
					"attribute": {
						"type": "string"
					},
					"value": {
						"type": "string"
					}
				}
			}
		},
		"securitySchemes": {
			"basicAuth": {
				"type": "http",
				"scheme": "basic"
			}
		}
	}
